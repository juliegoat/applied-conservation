<section class="form-section">
  <%= form_for @task do |f| %>
    <h2 class="heading page-heading"><%= heading %></h2>
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: 'form-field' %>
    <%= f.label :due_on, class: "form-label" %>
    <%= f.date_field :due_on, class: 'form-field' %>
    <%= f.label :user, class: "form-label" %>
    <%= f.collection_select :user_id, User.all, :id, :email, {include_blank: ""}, {class: 'form-field'} %>
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: 'form-field' %>

    <%= hidden_field_tag 'project_id', @project.id %>

    <div class="form-footer">
      <%= f.submit "Add Task", class: 'action-button' %>
    </div>
  <% end %>
</section>
